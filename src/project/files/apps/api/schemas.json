{
  "schemas": {
    "TaskDto": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "example": "My first task" },
        "ownerId": {
          "type": "integer",
          "format": "int64",
          "example": 10
        },
        "done": { "type": "boolean", "example": false, "default": false }
      }
    },
    "Task": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "example": 10
        },
        "name": { "type": "string", "example": "My first task" },
        "owner": { "$ref": "#/schemas/User" },
        "done": { "type": "boolean", "example": false, "default": false }
      }
    },
    "User": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "example": 10
        },
        "name": { "type": "string", "example": "Fred Smith" },
        "email": { "type": "string", "example": "fred@vastscript.com" }
      }
    }
  }
}
