{
  "tables": {
    "Task": {
      "required": ["id", "name", "done"],
      "properties": {
        "id": {
          "type": "number",
          "primary": true
        },
        "name": { "type": "string" },
        "owner": { "$ref": "#/schemas/User" },
        "done": { "type": "boolean", "default": false }
      }
    },
    "User": {
      "required": ["name"],
      "properties": {
        "id": {
          "type": "number",
          "primary": true
        },
        "name": { "type": "string" },
        "owner": { "$ref": "#/schemas/User", "nullable": true },
        "done": { "type": "boolean", "default": false }
      }
    }
  }
}